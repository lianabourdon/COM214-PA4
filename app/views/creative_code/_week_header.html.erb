<div class="container">
  <div class="d-flex justify-content-between align-items-center my-3">
    <div class="d-flex gap-2">
      <%# LEFT GROUP: Back + Prev (Prev shows only if wk > 1) %>
      <%= link_to "← Back to My Creative Code AT101 Projects",
                  at101_path, class: "btn btn-warning btn-sm" %>

      <% wk = @week.to_i %>
      <% if wk > 1 %>
        <%= link_to "← Week #{wk - 1}",
                    at101_week_path(wk - 1),
                    class: "btn btn-outline-secondary btn-sm" %>
      <% end %>
    </div>

    <div>
      <%# RIGHT: Next (shows only if wk < 10) %>
      <% if wk < 10 %>
        <%= link_to "Week #{wk + 1} →",
                    at101_week_path(wk + 1),
                    class: "btn btn-outline-secondary btn-sm" %>
      <% end %>
    </div>
  </div>
</div>

