<%= render "creative_code/week_header" %>

<div class="container-fluid min-vh-100 d-flex flex-column justify-content-center align-items-center text-center cargo-syllabus" style="margin-top: -150px;">
  <h2 class="mb-3">Sketch 2 – Keyboard Walker</h2>
  <p class="lead mb-2">
    Use your arrow keys or <code>W</code>, <code>A</code>, <code>S</code>, <code>D</code> to move the character across the screen.
  </p>

  <!-- Canvas + Navigation Row -->
  <div class="d-flex justify-content-center align-items-center mt-4 mb-3" style="gap: 2rem;">
    <%= link_to "← Sketch 1", at101_sketch_path(week: 5, sketch: 1), class: "btn btn-outline-primary" %>

    <div id="sketch-container"
         class="border rounded shadow bg-light p-3 d-flex justify-content-center align-items-center"
         style="width: 420px; height: 340px;">
    </div>

    <%= link_to "Sketch 3 →", at101_sketch_path(week: 5, sketch: 3), class: "btn btn-primary" %>
  </div>
</div>

<!-- Summary box -->
<div class="container text-start small bg-dark text-light rounded p-3 mb-3 border"
     style="max-width: 580px; margin-top: -180px;">
  <p><strong>✅ Conditional:</strong> Edge checks → <code>if (walker.x &lt; 0 || walker.x &gt; width) { velocityX *= -1 }</code></p>
  <p><strong>✅ Loop:</strong> Implicit draw loop for continuous movement</p>
  <p><strong>✅ Custom variables:</strong> position, velocity, input handling</p>
  <p class="mt-2 mb-0">
    <a href="<%= asset_path('sketch2.js') %>" download class="btn btn-sm btn-outline-secondary">⬇ Download sketch2.js</a>
  </p>
</div>

<!-- ============================== -->
<!--  LOCAL SCRIPT LOADING ORDER   -->
<!-- ============================== -->

<!-- p5 core -->
<script src="/downloads/week5/p5.min.js"></script>

<!-- p5play (optional, if needed for sprites) -->
