<nav class="d-flex justify-content-between my-3" aria-label="Week navigation">
  <% wk = @week.to_i %>
  <div>
    <% if wk > 1 %>
      <%= link_to "← Week #{wk - 1}", at101_week_path(wk - 1),
          class: "btn btn-outline-secondary btn-sm" %>
    <% end %>
  </div>
  <div>
    <% if wk < 10 %>
      <%= link_to "Week #{wk + 1} →", at101_week_path(wk + 1),
          class: "btn btn-outline-secondary btn-sm" %>
    <% end %>
  </div>
</nav>

