<div class="d-flex justify-content-between align-items-center my-3">
  <div class="d-flex gap-2">
    <%= link_to "← Back to My Creative Code AT101 Projects",
        at101_index_path, class: "btn btn-warning btn-sm" %>

    <% if @week.to_i > 1 %>
      <%= link_to "← Week #{@week.to_i - 1}",
          at101_week_path(@week.to_i - 1),
          class: "btn btn-outline-secondary btn-sm" %>
    <% end %>
  </div>

  <div>
    <% if @week.to_i < 10 %>
      <%= link_to "Week #{@week.to_i + 1} →",
          at101_week_path(@week.to_i + 1),
          class: "btn btn-outline-secondary btn-sm" %>
    <% end %>
  </div>
</div>

